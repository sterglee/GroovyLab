double  largeLoop(int  reps)  {
   def   sm=0.0
   def   cnt=0
  def  r = 1.0; def i=1.0;
 for (rep in 1.. reps) {
 r = 1.0
 while (r< 200) {
  i=1.0
  while (i < 300) {
          cnt+=1
          sm += 1/(400.5*i*r*rep)
         sm = Math.sin(sm)
         i += 1.0
     }
   r += 1.0
   }
}
     return sm;
  }




 
